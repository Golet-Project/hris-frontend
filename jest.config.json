{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "modulePaths": ["<rootDir>"],
  "testRegex": ["_test/.*\\.spec\\.ts$", ".*\\.spec\\.ts$"],
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": ["**/*.(t|j)s"],
  "coverageDirectory": "../coverage",
  "testEnvironment": "node",
  "setupFiles": ["dotenv/config"]
}
